<?xml version="1.0" encoding="UTF-8"?>
<configuration>
<!-- <configuration debug="true"> -->

    <!-- APPLICTION LOG -->
    <appender name="APPLOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/var/log/dmp/application.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>/var/log/application/application.log.%d{yyyy-MM-dd}.gz</fileNamePattern>
        </rollingPolicy>
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%date{yyyy/MM/dd HH:mm:ss:SSS} [%level] %logger{0}.%.20method %msg%n</pattern>
        </encoder>
    </appender>

    <!-- STDOUT -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <target>System.out</target>
        <encoder>
            <pattern>%date{yyyy/MM/dd HH:mm:ss:SSS} [%level] %logger{0}.%.20method %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="scalikejdbc" level="DEBUG" additivity="true"/>

    <!-- application.log -->
    <logger name="application" level="INFO">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="APPLOG"/>
    </logger>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date{yyyy-MM-dd HH:mm:ss ZZZZ} %coloredLevel %logger{15} in %thread %n%message%n%xException</pattern>
        </encoder>
    </appender>

    <root level="DEBUG">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>